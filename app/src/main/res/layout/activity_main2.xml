<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.kanta.austresultcheckernew.Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#148131"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="94dp"
            android:layout_gravity="center"
            android:layout_marginTop="50sp"
            android:src="@drawable/austlogo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aust Result Checker"
            android:layout_marginLeft="110dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginTop="10dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#082b84"
        android:padding="40dp">

        <Button
            android:id="@+id/teacherId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:text="@string/button1"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="#df1569"/>
        <Button
            android:id="@+id/studentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="150dp"
            android:layout_marginTop="40dp"
            android:background="#df1569"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:text="@string/button2"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>
