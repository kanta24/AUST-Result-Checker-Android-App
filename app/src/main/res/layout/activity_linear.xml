            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/editText"
                android:layout_width="128dp"
                android:layout_height="50dp"
                android:background="#3b3232" />

            <EditText
                android:layout_width="128dp"
